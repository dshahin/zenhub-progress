{
    "name": "Zenhub Progress",
    "description": "Add progress bars to Zenhub tabs",
    "version": "0.0.0.5",
    "manifest_version": 2,

    "permissions": [
        "https://www.github.com/",
        "storage"
    ],
    "content_scripts": [{
        "matches": [
            "https://github.com/*"
        ],
        "js": ["jquery.min.js", "github.bundle.min.js", "zen-progress.js"],
        "css": ["issue.css"],
        "run_at": "document_end"
    }],
    "icons": {
        "48": "img/checkmark48.png",
        "128": "img/checkmark128.png"
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true,
        "open_in_tab": false
    }
}
